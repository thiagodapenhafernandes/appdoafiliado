<!-- Cards de métricas principais -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total de Comissões -->
  <div class="bg-white shadow rounded-lg p-6 border-l-4 border-green-500">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Total Comissões</p>
        <p class="text-2xl font-bold text-green-600">R$ <%= number_with_precision(@total_commissions, precision: 2, delimiter: '.', separator: ',') %></p>
        <p class="text-sm text-gray-500"><%= @total_orders %> pedidos processados</p>
      </div>
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
        </svg>
      </div>
    </div>
  </div>

  <!-- Total de Vendas -->
  <div class="bg-white shadow rounded-lg p-6 border-l-4 border-blue-500">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Total Vendas</p>
        <p class="text-2xl font-bold text-blue-600">R$ <%= number_with_precision(@total_sales, precision: 2, delimiter: '.', separator: ',') %></p>
        <p class="text-sm text-gray-500"><%= @total_orders %> pedidos</p>
      </div>
      <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
        </svg>
      </div>
    </div>
  </div>

  <!-- Ticket Médio -->
  <div class="bg-white shadow rounded-lg p-6 border-l-4 border-purple-500">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Ticket Médio</p>
        <p class="text-2xl font-bold text-purple-600">R$ <%= number_with_precision(@average_ticket, precision: 2, delimiter: '.', separator: ',') %></p>
        <p class="text-sm text-gray-500">por pedido</p>
      </div>
      <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
    </div>
  </div>

  <!-- Taxa de Conversão -->
  <div class="bg-white shadow rounded-lg p-6 border-l-4 border-yellow-500">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Taxa de Conversão</p>
        <p class="text-2xl font-bold text-yellow-600"><%= number_with_precision(@conversion_rate, precision: 1) %>%</p>
        <p class="text-sm text-gray-500">dos cliques</p>
      </div>
      <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
      </div>
    </div>
  </div>
</div>

<!-- Gráficos -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
  <!-- Evolução de Comissões -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-900">Evolução de Comissões</h3>
      <div class="text-sm text-gray-500">
        <% if @date_range_info && @date_range_info[:formatted_range] %>
          <%= @date_range_info[:formatted_range] %>
        <% else %>
          Dados do CSV
        <% end %>
      </div>
    </div>
    <div class="h-64">
      <canvas id="commissionsChart"></canvas>
    </div>
  </div>

  <!-- Performance por Canal -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-900">Performance por Canal</h3>
      <div class="text-sm text-gray-500">Distribuição de vendas</div>
    </div>
    <div class="h-64">
      <canvas id="channelChart"></canvas>
    </div>
  </div>
</div>

<!-- Top Categorias -->
<div class="bg-white shadow rounded-lg p-6 mb-8">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-lg font-semibold text-gray-900">Top Categorias</h3>
    <span class="text-sm text-gray-500">Maiores comissões</span>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @category_performance.first(6).each_with_index do |(category, data), index| %>
      <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-gray-900 truncate"><%= category %></span>
          <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full">#<%= index + 1 %></span>
        </div>
        <div class="space-y-1">
          <p class="text-lg font-bold text-green-600">R$ <%= number_with_precision(data[:commission], precision: 2, delimiter: '.', separator: ',') %></p>
          <p class="text-sm text-gray-500"><%= data[:orders] %> pedidos • R$ <%= number_with_precision(data[:sales], precision: 2, delimiter: '.', separator: ',') %> em vendas</p>
        </div>
        <div class="mt-3 bg-gray-200 rounded-full h-2">
          <div class="bg-blue-600 h-2 rounded-full" style="width: <%= data[:percentage] %>%"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Top Produtos -->
<div class="bg-white shadow rounded-lg p-6">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-lg font-semibold text-gray-900">Top Produtos</h3>
    <span class="text-sm text-gray-500">Maiores comissões</span>
  </div>
  
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Produto</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Comissão</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vendas</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Performance</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @top_products.first(10).each_with_index do |product, index| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-8 w-8 bg-blue-100 rounded-lg flex items-center justify-center">
                  <span class="text-sm font-medium text-blue-600"><%= index + 1 %></span>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900 max-w-xs truncate">
                    <%= product[:name] || "Produto #{product[:product_id]}" %>
                  </div>
                  <div class="text-sm text-gray-500">ID: <%= product[:product_id] %></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-green-600">R$ <%= number_with_precision(product[:commission], precision: 2, delimiter: '.', separator: ',') %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900">R$ <%= number_with_precision(product[:sales], precision: 2, delimiter: '.', separator: ',') %></div>
              <div class="text-sm text-gray-500"><%= product[:orders] %> pedidos</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-1 bg-gray-200 rounded-full h-2 mr-2">
                  <div class="bg-blue-600 h-2 rounded-full" style="width: <%= [product[:percentage], 100].min %>%"></div>
                </div>
                <span class="text-sm text-gray-500"><%= number_with_precision(product[:percentage], precision: 1) %>%</span>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Gráfico de Evolução de Comissões
  const commissionsCtx = document.getElementById('commissionsChart').getContext('2d');
  new Chart(commissionsCtx, {
    type: 'line',
    data: {
      labels: <%= raw @daily_commissions.keys.to_json %>,
      datasets: [{
        label: 'Comissões (R$)',
        data: <%= raw @daily_commissions.values.to_json %>,
        borderColor: 'rgb(59, 130, 246)',
        backgroundColor: 'rgba(59, 130, 246, 0.1)',
        borderWidth: 2,
        fill: true,
        tension: 0.4
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            callback: function(value) {
              return 'R$ ' + value.toFixed(2);
            }
          }
        }
      },
      elements: {
        point: {
          radius: 4,
          hoverRadius: 6
        }
      }
    }
  });

  // Gráfico de Performance por Canal
  const channelCtx = document.getElementById('channelChart').getContext('2d');
  new Chart(channelCtx, {
    type: 'doughnut',
    data: {
      labels: <%= raw @channel_performance.keys.to_json %>,
      datasets: [{
        data: <%= raw @channel_performance.values.map { |v| v[:commission] }.to_json %>,
        backgroundColor: [
          '#3B82F6',
          '#10B981',
          '#F59E0B',
          '#EF4444',
          '#8B5CF6',
          '#F97316'
        ],
        borderWidth: 0
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'bottom',
          labels: {
            padding: 20,
            usePointStyle: true
          }
        }
      }
    }
  });
});
</script>
