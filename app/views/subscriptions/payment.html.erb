<div class="container mx-auto px-4 py-8">
  <div class="max-w-lg mx-auto">
    <div class="text-center mb-8">
      <svg class="w-16 h-16 text-blue-500 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
      </svg>
      <h1 class="text-3xl font-bold text-gray-800 mb-2">Finalizar Pagamento</h1>
      <p class="text-gray-600">Complete sua assinatura do plano <%= @plan.name %></p>
    </div>

    <!-- Plan summary -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
      <div class="flex justify-between items-center mb-4">
        <div>
          <h2 class="text-lg font-semibold text-gray-800"><%= @plan.name %></h2>
          <p class="text-gray-600 text-sm">Assinatura mensal</p>
        </div>
        <div class="text-right">
          <div class="text-xl font-bold text-gray-800">
            R$ <%= number_with_precision(@plan.price, precision: 2) %>
          </div>
          <div class="text-gray-600 text-sm">por mês</div>
        </div>
      </div>
    </div>

    <!-- Stripe Elements container -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Dados do Cartão</h3>
      
      <!-- Stripe Payment Element será carregado aqui -->
      <div id="payment-element" class="mb-6">
        <!-- Elementos do Stripe serão inseridos aqui -->
      </div>
      
      <div id="payment-message" class="hidden mb-4 p-3 rounded-lg"></div>
      
      <button id="submit-payment" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 px-4 rounded-lg font-medium transition-colors">
        <span id="button-text">Confirmar Pagamento - R$ <%= number_with_precision(@plan.price, precision: 2) %></span>
        <div id="spinner" class="hidden inline-block w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin ml-2"></div>
      </button>
    </div>

    <!-- Security notice -->
    <div class="mt-6 text-center">
      <div class="flex items-center justify-center mb-2">
        <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
        </svg>
        <span class="text-sm font-medium text-gray-700">Pagamento 100% Seguro</span>
      </div>
      <p class="text-xs text-gray-600">
        Seus dados são protegidos por criptografia SSL e processados pelo Stripe.
      </p>
    </div>
  </div>
</div>

<!-- Stripe JavaScript -->
<script src="https://js.stripe.com/v3/"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  const stripe = Stripe('<%= Rails.configuration.stripe[:publishable_key] %>');
  const elements = stripe.elements({
    clientSecret: '<%= @client_secret %>'
  });

  const paymentElement = elements.create('payment');
  paymentElement.mount('#payment-element');

  const form = document.getElementById('payment-form');
  const submitButton = document.getElementById('submit-payment');
  const buttonText = document.getElementById('button-text');
  const spinner = document.getElementById('spinner');
  const messageContainer = document.getElementById('payment-message');

  submitButton.addEventListener('click', async (event) => {
    event.preventDefault();
    
    setLoading(true);

    const {error} = await stripe.confirmPayment({
      elements,
      confirmParams: {
        return_url: '<%= subscription_url(@subscription) %>'
      }
    });

    if (error) {
      showMessage(error.message, 'error');
      setLoading(false);
    }
  });

  function showMessage(messageText, type = 'error') {
    messageContainer.classList.remove('hidden');
    messageContainer.textContent = messageText;
    
    if (type === 'error') {
      messageContainer.className = 'mb-4 p-3 rounded-lg bg-red-50 text-red-700 border border-red-200';
    } else {
      messageContainer.className = 'mb-4 p-3 rounded-lg bg-green-50 text-green-700 border border-green-200';
    }
  }

  function setLoading(isLoading) {
    if (isLoading) {
      submitButton.disabled = true;
      buttonText.classList.add('hidden');
      spinner.classList.remove('hidden');
    } else {
      submitButton.disabled = false;
      buttonText.classList.remove('hidden');
      spinner.classList.add('hidden');
    }
  }
});
</script>
