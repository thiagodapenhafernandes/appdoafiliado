<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-2">
        <% if @requires_registration %>
          Criar Conta e Assinar
        <% else %>
          Confirmar Assinatura
        <% end %>
      </h1>
      <p class="text-gray-600">Voc√™ est√° prestes a assinar o plano <%= @plan.name %></p>
    </div>

    <!-- Plan summary -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h2 class="text-xl font-bold text-gray-800"><%= @plan.name %></h2>
          <p class="text-gray-600"><%= @plan.description %></p>
        </div>
        <div class="text-right">
          <div class="text-2xl font-bold text-gray-800">
            R$ <%= number_with_precision(@plan.price, precision: 2) %>
          </div>
          <div class="text-gray-600">por m√™s</div>
        </div>
      </div>
      
      <div class="border-t pt-4">
        <h3 class="font-semibold text-gray-800 mb-3">O que est√° inclu√≠do:</h3>
        <div class="space-y-2">
          <% if @plan.features.present? %>
            <% @plan.features.each do |feature| %>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-gray-600"><%= feature %></span>
              </div>
            <% end %>
          <% else %>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-sm text-gray-600">Acesso completo √† plataforma</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Current subscription warning -->
    <% if user_signed_in? && current_user.current_subscription&.active? %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Aten√ß√£o</h3>
            <div class="mt-1 text-sm text-yellow-700">
              <% if current_user.on_trial? %>
                Sua assinatura substituir√° o per√≠odo de teste atual.
              <% else %>
                Esta assinatura substituir√° seu plano atual (<%= current_user.current_subscription.plan.name %>).
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with(model: @subscription, local: true) do |form| %>
      <%= form.hidden_field :plan_id, value: @plan.id %>
      
      <!-- Registration form for new users -->
      <% if @requires_registration %>
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Criar Sua Conta</h3>
          
          <%= fields_for :user, @user do |user_form| %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
              <div>
                <%= user_form.label :first_name, "Nome", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= user_form.text_field :first_name, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                    required: true %>
                <% if @user&.errors&.[](:first_name)&.any? %>
                  <p class="text-red-500 text-xs mt-1"><%= @user.errors[:first_name].first %></p>
                <% end %>
              </div>
              
              <div>
                <%= user_form.label :last_name, "Sobrenome", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= user_form.text_field :last_name, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                    required: true %>
                <% if @user&.errors&.[](:last_name)&.any? %>
                  <p class="text-red-500 text-xs mt-1"><%= @user.errors[:last_name].first %></p>
                <% end %>
              </div>
            </div>
            
            <div class="mb-4">
              <%= user_form.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= user_form.email_field :email, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                  required: true %>
              <% if @user&.errors&.[](:email)&.any? %>
                <p class="text-red-500 text-xs mt-1"><%= @user.errors[:email].first %></p>
              <% end %>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
              <div>
                <%= user_form.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= user_form.password_field :password, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                    required: true,
                    minlength: 6 %>
                <% if @user&.errors&.[](:password)&.any? %>
                  <p class="text-red-500 text-xs mt-1"><%= @user.errors[:password].first %></p>
                <% end %>
              </div>
              
              <div>
                <%= user_form.label :password_confirmation, "Confirmar Senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= user_form.password_field :password_confirmation, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                    required: true,
                    minlength: 6 %>
                <% if @user&.errors&.[](:password_confirmation)&.any? %>
                  <p class="text-red-500 text-xs mt-1"><%= @user.errors[:password_confirmation].first %></p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Payment form -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Finalizar Assinatura</h3>
        
        <% if @plan.price == 0 %>
          <!-- Free plan -->
          <div class="text-center py-8">
            <svg class="w-16 h-16 text-green-500 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <h4 class="text-xl font-semibold text-gray-800 mb-2">Plano Gratuito</h4>
            <p class="text-gray-600 mb-6">Comece a usar nossa plataforma gratuitamente.</p>
          </div>
        <% else %>
          <!-- Paid plan - Real Stripe integration -->
          <div class="text-center py-8">
            <svg class="w-16 h-16 text-blue-500 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
            <h4 class="text-xl font-semibold text-gray-800 mb-2">Pagamento Seguro</h4>
            <p class="text-gray-600 mb-6">
              Processamento seguro via Stripe. Voc√™ ser√° redirecionado para a p√°gina de pagamento.
            </p>
            
            <div class="bg-blue-50 rounded-lg p-4 mb-6">
              <p class="text-sm text-blue-800">
                <strong>üîí Seguro:</strong> Seus dados de pagamento s√£o processados de forma segura pelo Stripe e n√£o s√£o armazenados em nossos servidores.
              </p>
            </div>
          </div>
        <% end %>
        
        <div class="flex space-x-4">
          <%= link_to plans_path, class: "flex-1 bg-gray-300 hover:bg-gray-400 text-gray-700 py-2 px-4 rounded-lg font-medium text-center transition-colors" do %>
            Voltar aos Planos
          <% end %>
          
          <%= form.submit(@requires_registration ? "Criar Conta e Assinar" : "Prosseguir para Pagamento", class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg font-medium transition-colors cursor-pointer") %>
        </div>
      </div>
    <% end %>

    <!-- Terms and conditions -->
    <div class="mt-6 text-center text-sm text-gray-600">
      <p>Ao confirmar, voc√™ concorda com nossos 
        <a href="#" class="text-blue-600 hover:text-blue-800">Termos de Servi√ßo</a> e 
        <a href="#" class="text-blue-600 hover:text-blue-800">Pol√≠tica de Privacidade</a>.
      </p>
    </div>
  </div>
</div>
