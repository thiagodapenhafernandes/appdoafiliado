<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-2">
        <% if @requires_registration %>
          Criar Conta e Assinar
        <% else %>
          Confirmar Assinatura
        <% end %>
      </h1>
      <p class="text-gray-600">Você está prestes a assinar o plano <%= @plan.name %></p>
    </div>

    <!-- Plan summary -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h2 class="text-xl font-bold text-gray-800"><%= @plan.name %></h2>
          <p class="text-gray-600"><%= @plan.description %></p>
        </div>
        <div class="text-right">
          <div class="text-2xl font-bold text-gray-800">
            R$ <%= number_with_precision(@plan.price, precision: 2) %>
          </div>
          <div class="text-gray-600">por mês</div>
        </div>
      </div>
      
      <div class="border-t pt-4">
        <h3 class="font-semibold text-gray-800 mb-3">O que está incluído:</h3>
        <div class="space-y-2">
          <% if @plan.features.present? %>
            <% @plan.features.each do |feature| %>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-gray-600"><%= feature %></span>
              </div>
            <% end %>
          <% else %>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-sm text-gray-600">Acesso completo à plataforma</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Current subscription warning -->
    <% if user_signed_in? && current_user.current_subscription&.active? %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Atenção</h3>
            <div class="mt-1 text-sm text-yellow-700">
              <% if current_user.on_trial? %>
                Sua assinatura substituirá o período de teste atual.
              <% else %>
                Esta assinatura substituirá seu plano atual (<%= current_user.current_subscription.plan.name %>).
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with(model: @subscription, local: true, html: { id: 'new_subscription' }) do |form| %>
      <%= form.hidden_field :plan_id, value: @plan.id %>
      
      <!-- Registration form for new users -->
      <% if @requires_registration %>
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Criar Sua Conta</h3>
          
          <%= fields_for :user, @user do |user_form| %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
              <div>
                <%= user_form.label :first_name, "Nome", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= user_form.text_field :first_name, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                    required: true %>
                <% if @user&.errors&.[](:first_name)&.any? %>
                  <p class="text-red-500 text-xs mt-1"><%= @user.errors[:first_name].first %></p>
                <% end %>
              </div>
              
              <div>
                <%= user_form.label :last_name, "Sobrenome", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= user_form.text_field :last_name, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                    required: true %>
                <% if @user&.errors&.[](:last_name)&.any? %>
                  <p class="text-red-500 text-xs mt-1"><%= @user.errors[:last_name].first %></p>
                <% end %>
              </div>
            </div>
            
            <div class="mb-4">
              <%= user_form.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= user_form.email_field :email, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                  required: true %>
              <% if @user&.errors&.[](:email)&.any? %>
                <p class="text-red-500 text-xs mt-1"><%= @user.errors[:email].first %></p>
              <% end %>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
              <div>
                <%= user_form.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= user_form.password_field :password, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                    required: true,
                    minlength: 6 %>
                <% if @user&.errors&.[](:password)&.any? %>
                  <p class="text-red-500 text-xs mt-1"><%= @user.errors[:password].first %></p>
                <% end %>
              </div>
              
              <div>
                <%= user_form.label :password_confirmation, "Confirmar Senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= user_form.password_field :password_confirmation, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                    required: true,
                    minlength: 6 %>
                <% if @user&.errors&.[](:password_confirmation)&.any? %>
                  <p class="text-red-500 text-xs mt-1"><%= @user.errors[:password_confirmation].first %></p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Payment Information Section -->
        <% if @plan.price > 0 %>
          <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 712-2zm8-2v2H7V7a3 3 0 616 0z" clip-rule="evenodd"></path>
              </svg>
              <p class="text-sm text-green-700">
                <strong>Acesso imediato!</strong> O valor de R$ <%= number_with_precision(@plan.price, precision: 2) %> será processado hoje via Stripe.
              </p>
            </div>
          </div>
          
          <h3 class="text-lg font-semibold text-gray-800 mb-4">
            <i class="fas fa-credit-card mr-2"></i>
            Dados do Cartão
          </h3>
          
          <div class="mb-6">
            <!-- Stripe Elements será carregado aqui -->
            <div id="card-element-logged" class="p-4 border border-gray-300 rounded-lg bg-white mb-3">
              <!-- Elementos do Stripe serão inseridos aqui -->
            </div>
            
            <!-- Erros do cartão serão exibidos aqui -->
            <div id="card-errors-logged" class="text-red-600 text-sm" role="alert"></div>
          </div>
        <% end %>
      <% end %>

      <!-- Payment Information Section for logged in users -->
      <% if !@requires_registration && @plan.price > 0 %>
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
          <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 01 2 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 01 2-2zm8-2v2H7V7a3 3 0 01 6 0z" clip-rule="evenodd"></path>
              </svg>
              <p class="text-sm text-green-700">
                <strong>Acesso imediato!</strong> O valor de R$ <%= number_with_precision(@plan.price, precision: 2) %> será processado hoje via Stripe.
              </p>
            </div>
          </div>
          
          <h3 class="text-lg font-semibold text-gray-800 mb-4">
            <i class="fas fa-credit-card mr-2"></i>
            Dados do Cartão
          </h3>
          
          <div class="mb-6">
            <!-- Stripe Elements será carregado aqui -->
            <div id="card-element" class="p-4 border border-gray-300 rounded-lg bg-white mb-3">
              <!-- Elementos do Stripe serão inseridos aqui -->
            </div>
            
            <!-- Erros do cartão serão exibidos aqui -->
            <div id="card-errors" class="text-red-600 text-sm" role="alert"></div>
          </div>
        </div>
      <% end %>

      <!-- Hidden field to always skip trial -->
      <%= hidden_field_tag 'skip_trial', 'true' %>

      <!-- Payment form -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Finalizar Assinatura</h3>
        
        <% if @plan.price == 0 %>
          <!-- Free plan -->
          <div class="text-center py-8">
            <svg class="w-16 h-16 text-green-500 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <h4 class="text-xl font-semibold text-gray-800 mb-2">Plano Gratuito</h4>
            <p class="text-gray-600 mb-6">Comece a usar nossa plataforma gratuitamente.</p>
          </div>
        <% end %>
        
        <div class="flex space-x-4">
          <%= link_to plans_path, class: "flex-1 bg-gray-300 hover:bg-gray-400 text-gray-700 py-2 px-4 rounded-lg font-medium text-center transition-colors" do %>
            Voltar aos Planos
          <% end %>
          
          <%= form.submit(@requires_registration ? "Criar Conta e Assinar Agora" : "Confirmar Assinatura", 
              class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg font-medium transition-colors cursor-pointer",
              id: "submit-button") %>
        </div>
      </div>
    <% end %>

    <!-- Terms and conditions -->
    <div class="mt-6 text-center text-sm text-gray-600">
      <p>Ao confirmar, você concorda com nossos 
        <a href="#" class="text-blue-600 hover:text-blue-800">Termos de Serviço</a> e 
        <a href="#" class="text-blue-600 hover:text-blue-800">Política de Privacidade</a>.
      </p>
    </div>
  </div>
</div>

<!-- Stripe Elements JavaScript -->
<% if @plan.price > 0 %>
  <script src="https://js.stripe.com/v3/"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Procurar pelo elemento card-element (pode estar em qualquer lugar da página)
      let cardElementContainer = document.getElementById('card-element');
      let cardErrorsContainer = document.getElementById('card-errors');
      
      // Se não encontrar o primeiro, tentar o segundo (usuário logado)
      if (!cardElementContainer) {
        cardElementContainer = document.getElementById('card-element-logged');
        cardErrorsContainer = document.getElementById('card-errors-logged');
      }
      
      if (!cardElementContainer) {
        console.log('Card element não encontrado - plano gratuito ou erro na página');
        return;
      }

      console.log('Card element found, initializing Stripe...');
      
      // Inicializar Stripe
      const stripe = Stripe('<%= Rails.configuration.stripe[:publishable_key] %>');
      console.log('Stripe initialized with key:', '<%= Rails.configuration.stripe[:publishable_key] %>');
      
      const elements = stripe.elements();

      // Criar elemento do cartão
      const cardElement = elements.create('card', {
        style: {
          base: {
            fontSize: '16px',
            color: '#424770',
            '::placeholder': {
              color: '#aab7c4',
            },
          },
        },
      });

      console.log('Card element created, mounting...');
      
      // Montar o elemento no DOM
      cardElement.mount(cardElementContainer);
      
      console.log('Card element mounted successfully');

      // Estado do cartão
      let cardValid = false;

      // Manipular mudanças no cartão
      cardElement.on('change', function(event) {
        if (event.error) {
          cardErrorsContainer.textContent = event.error.message;
          cardValid = false;
        } else {
          cardErrorsContainer.textContent = '';
          cardValid = event.complete;
        }
      });

      // Manipular submissão do formulário
      const form = document.getElementById('new_subscription');
      const submitButton = document.getElementById('submit-button');

      if (!form || !submitButton) {
        console.error('Formulário ou botão não encontrado');
        return;
      }

      form.addEventListener('submit', async function(event) {
        event.preventDefault();
        
        console.log('Form submitted - starting validation');
        
        // Verificar se precisa de cartão para este plano
        const planPrice = <%= @plan.price %>;
        console.log('Plan price:', planPrice);
        
        if (planPrice <= 0) {
          // Plano gratuito, submeter diretamente
          console.log('Free plan - submitting directly');
          form.submit();
          return;
        }

        // Desabilitar botão para evitar duplo submit
        submitButton.disabled = true;
        submitButton.textContent = 'Processando...';
        
        console.log('Card valid state:', cardValid);

        // Verificar se cartão está válido
        if (!cardValid) {
          console.log('Card not valid - showing error');
          cardErrorsContainer.textContent = 'Por favor, preencha os dados do cartão corretamente.';
          
          // Reabilitar botão
          submitButton.disabled = false;
          submitButton.textContent = '<%= @requires_registration ? "Criar Conta e Assinar Agora" : "Confirmar Assinatura" %>';
          return;
        }

        console.log('Creating Stripe token...');
        
        // Criar token do Stripe
        try {
          const {token, error} = await stripe.createToken(cardElement);
          
          console.log('Stripe response:', {token: token?.id, error: error?.message});

          if (error) {
            // Mostrar erro para o usuário
            console.log('Stripe error:', error.message);
            cardErrorsContainer.textContent = error.message;
            
            // Reabilitar botão
            submitButton.disabled = false;
            submitButton.textContent = '<%= @requires_registration ? "Criar Conta e Assinar Agora" : "Confirmar Assinatura" %>';
          } else {
            // Adicionar token ao formulário e submeter
            console.log('Token created successfully:', token.id);
            
            const hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.name = 'stripe_token';
            hiddenInput.value = token.id;
            form.appendChild(hiddenInput);
            
            console.log('Token added to form, submitting...');
            console.log('Form data before submit:', new FormData(form));
            
            // Submeter formulário
            form.submit();
          }
        } catch (err) {
          console.error('Erro ao criar token:', err);
          cardErrorsContainer.textContent = 'Erro ao processar cartão. Tente novamente.';
          
          // Reabilitar botão
          submitButton.disabled = false;
          submitButton.textContent = '<%= @requires_registration ? "Criar Conta e Assinar Agora" : "Confirmar Assinatura" %>';
        }
      });
    });
  </script>
<% end %>
