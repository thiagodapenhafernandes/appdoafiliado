<div class="min-h-screen bg-gray-50 p-6">
  <div class="max-w-7xl mx-auto">
    <% if @advanced_tracking_locked %>
      <div class="space-y-6">
        <%= render 'shared/plan_gate',
            title: 'Analytics de cliques liberados para Pro e Elite',
            message: 'Importe o CSV oficial da Shopee para acompanhar origens, horários e regiões com dados atualizados em tempo real.',
            cta_label: 'Conhecer planos Pro e Elite' %>
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-sm">
          <h2 class="text-lg font-semibold text-gray-900 mb-3">O que você desbloqueia</h2>
          <ul class="list-disc list-inside text-sm text-gray-600 space-y-1">
            <li>Importação ilimitada com limpeza automática dos dados da Shopee</li>
            <li>Dashboards avançados por origem, região, hora do dia e subID</li>
            <li>Alertas de picos de performance para otimizar campanhas rapidamente</li>
          </ul>
        </div>
      </div>
    <% else %>
      
          <!-- Filtros e Relatório Detalhado -->
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8 p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Relatório de cliques</h2>
            <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-4">
              <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">Data Inicial</label>
                <input type="date" class="w-full border-gray-300 rounded-lg text-sm px-3 py-2" name="start_date" value="<%= params[:start_date] %>">
              </div>
              <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">Data Final</label>
                <input type="date" class="w-full border-gray-300 rounded-lg text-sm px-3 py-2" name="end_date" value="<%= params[:end_date] %>">
              </div>
              <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">Sub_id</label>
                <input type="text" class="w-full border-gray-300 rounded-lg text-sm px-3 py-2" name="sub_id" placeholder="Pesquisar por sub_id" value="<%= params[:sub_id] %>">
              </div>
              <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">ID dos Cliques</label>
                <input type="text" class="w-full border-gray-300 rounded-lg text-sm px-3 py-2" name="click_id" placeholder="Pesquisar por ID de clique" value="<%= params[:click_id] %>">
              </div>
              <div>
                <label class="block text-xs font-medium text-gray-500 mb-1">Região dos Cliques</label>
                <input type="text" class="w-full border-gray-300 rounded-lg text-sm px-3 py-2" name="region" placeholder="Pesquisar por região" value="<%= params[:region] %>">
              </div>
            </div>
            <div class="flex flex-wrap gap-2 mb-4">
              <button class="bg-primary text-white px-4 py-2 rounded-lg font-medium hover:bg-primary/90 transition">Pesquisar</button>
              <button class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg font-medium hover:bg-gray-300 transition">Limpar</button>
              <button class="bg-accent text-white px-4 py-2 rounded-lg font-medium hover:bg-accent/90 transition">Exportar</button>
              <button class="bg-red-100 text-red-700 px-4 py-2 rounded-lg font-medium hover:bg-red-200 transition">Deletar Período</button>
              <button class="bg-red-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-red-700 transition">Deletar TODOS</button>
            </div>
            <div class="overflow-x-auto">
              <table class="min-w-full text-xs">
                <thead>
                  <tr class="border-b border-gray-200 bg-gray-50">
                    <th class="py-2 px-3 text-left font-semibold text-gray-700">ID dos Cliques</th>
                    <th class="py-2 px-3 text-left font-semibold text-gray-700">Período dos Cliques</th>
                    <th class="py-2 px-3 text-left font-semibold text-gray-700">Região dos Cliques</th>
                    <th class="py-2 px-3 text-left font-semibold text-gray-700">Sub_id</th>
                    <th class="py-2 px-3 text-left font-semibold text-gray-700">Referenciador</th>
                  </tr>
                </thead>
                <tbody>
                  <% (@csv_data || @clicks || []).each do |click| %>
                    <tr class="border-b border-gray-100">
                      <td class="py-2 px-3 text-gray-900"><%= click[:click_id] || click.click_id %></td>
                      <td class="py-2 px-3 text-gray-900"><%= (click[:click_time] || click.click_time).try(:strftime, '%d/%m/%Y %H:%M:%S') %></td>
                      <td class="py-2 px-3 text-gray-900"><%= click[:region] || click.region %></td>
                      <td class="py-2 px-3 text-gray-900"><%= click[:sub_id] || click.sub_id %></td>
                      <td class="py-2 px-3 text-gray-900"><%= click[:referrer] || click.referrer %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <div class="text-xs text-gray-500 mt-2">Total de registros: <%= (@csv_data || @clicks || []).size %></div>
            </div>
          </div>
          <!-- Header -->
          <div class="mb-8">
            <div class="flex items-center justify-between mb-4">
              <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Análise de Cliques Shopee</h1>
                <% if @from_csv %>
                  <div class="flex items-center mb-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      Análise do CSV Importado
                    </span>
                  </div>
                  <p class="text-gray-600">Análise pontual dos dados do arquivo CSV carregado</p>
                <% else %>
                  <p class="text-gray-600">Análise completa dos dados importados do CSV</p>
                <% end %>
              </div>
              <div class="flex space-x-3">
                <% if @from_csv %>
                  <%= link_to clicks_analytics_import_csv_path, class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition-colors flex items-center" do %>
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    Nova Análise
                  <% end %>
                  <%= link_to clicks_analytics_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded transition-colors flex items-center" do %>
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
                    </svg>
                    Ver Dados do Banco
                  <% end %>
                <% else %>
                  <%= link_to clicks_analytics_import_csv_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors flex items-center" do %>
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                    </svg>
                    Importar CSV
                  <% end %>
                <% end %>
              </div>
            </div>
            <% if @date_range_info && @date_range_info[:formatted_range] %>
              <p class="text-sm text-gray-500">
                Período dos dados: <%= @date_range_info[:formatted_range] %> 
                (<%= @date_range_info[:total_days] %> dias)
              </p>
            <% end %>
          </div>
      
          <!-- KPI Cards -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Total Clicks -->
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-gray-600 text-sm font-medium">Total de Cliques</p>
                  <p class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_clicks) %></p>
                </div>
                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.122 2.122"></path>
                  </svg>
                </div>
              </div>
            </div>
      
            <!-- Top Fonte -->
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-gray-600 text-sm font-medium">Principal Fonte</p>
                  <p class="text-lg font-bold text-gray-900"><%= @top_referrer ? @top_referrer[0] : 'N/A' %></p>
                  <p class="text-sm text-gray-500"><%= @top_referrer ? "#{@top_referrer[1]} cliques" : '' %></p>
                </div>
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                  </svg>
                </div>
              </div>
            </div>
      
            <!-- Top Região -->
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-gray-600 text-sm font-medium">Principal Região</p>
                  <p class="text-lg font-bold text-gray-900"><%= @top_region ? @top_region[0] : 'N/A' %></p>
                  <p class="text-sm text-gray-500"><%= @top_region ? "#{@top_region[1]} cliques" : '' %></p>
                </div>
                <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
              </div>
            </div>
      
            <!-- Horário de Pico -->
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-gray-600 text-sm font-medium">Horário de Pico</p>
                  <p class="text-2xl font-bold text-gray-900"><%= @peak_hour || 'N/A' %></p>
                </div>
                <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
      
          <!-- Charts Row 1 -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
            <!-- Cliques por Dia -->
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Evolução Diária</h3>
              <div class="h-64">
                <canvas id="dailyClicksChart"></canvas>
              </div>
            </div>
      
            <!-- Cliques por Hora -->
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Cliques por Hora</h3>
              <div class="h-64">
                <canvas id="hourlyClicksChart"></canvas>
              </div>
            </div>
          </div>
      
          <!-- Charts Row 2 -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
            <!-- Cliques por Fonte -->
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Cliques por Fonte</h3>
              <div class="h-64">
                <canvas id="referrerChart"></canvas>
              </div>
            </div>
      
            <!-- Cliques por Região -->
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Cliques por Região</h3>
              <div class="h-64">
                <canvas id="regionChart"></canvas>
              </div>
            </div>
          </div>
      
          <!-- Detailed Tables -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Referrers Table -->
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Desempenho por Fonte</h3>
              <div class="overflow-x-auto">
                <table class="min-w-full">
                  <thead>
                    <tr class="border-b border-gray-200">
                      <th class="text-left py-3 px-4 font-medium text-gray-900">Fonte</th>
                      <th class="text-right py-3 px-4 font-medium text-gray-900">Cliques</th>
                      <th class="text-right py-3 px-4 font-medium text-gray-900">%</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @clicks_by_referrer.sort_by { |_, v| -v }.each do |referrer, clicks| %>
                      <tr class="border-b border-gray-100">
                        <td class="py-3 px-4 text-gray-900"><%= referrer %></td>
                        <td class="py-3 px-4 text-right text-gray-900"><%= number_with_delimiter(clicks) %></td>
                        <td class="py-3 px-4 text-right text-gray-600">
                          <%= number_to_percentage((clicks.to_f / @total_clicks * 100), precision: 1) %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
      
            <!-- Regions Table -->
            <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Desempenho por Região</h3>
              <div class="overflow-x-auto">
                <table class="min-w-full">
                  <thead>
                    <tr class="border-b border-gray-200">
                      <th class="text-left py-3 px-4 font-medium text-gray-900">Região</th>
                      <th class="text-right py-3 px-4 font-medium text-gray-900">Cliques</th>
                      <th class="text-right py-3 px-4 font-medium text-gray-900">%</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @clicks_by_region.sort_by { |_, v| -v }.each do |region, clicks| %>
                      <tr class="border-b border-gray-100">
                        <td class="py-3 px-4 text-gray-900"><%= region %></td>
                        <td class="py-3 px-4 text-right text-gray-900"><%= number_with_delimiter(clicks) %></td>
                        <td class="py-3 px-4 text-right text-gray-600">
                          <%= number_to_percentage((clicks.to_f / @total_clicks * 100), precision: 1) %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Chart.js Script -->
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      <script>
        // Daily Clicks Chart
        const dailyCtx = document.getElementById('dailyClicksChart').getContext('2d');
        new Chart(dailyCtx, {
          type: 'line',
          data: <%= raw @daily_chart_data.to_json %>,
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                display: false
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                ticks: {
                  stepSize: 1
                }
              }
            }
          }
        });
      
        // Hourly Clicks Chart
        const hourlyCtx = document.getElementById('hourlyClicksChart').getContext('2d');
        new Chart(hourlyCtx, {
          type: 'line',
          data: <%= raw @hourly_chart_data.to_json %>,
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                display: false
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                ticks: {
                  stepSize: 1
                }
              }
            }
          }
        });
      
        // Referrer Chart
        const referrerCtx = document.getElementById('referrerChart').getContext('2d');
        new Chart(referrerCtx, {
          type: 'bar',
          data: <%= raw @referrer_chart_data.to_json %>,
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: { display: false }
            },
            scales: {
              x: { beginAtZero: true },
              y: { beginAtZero: true }
            }
          }
        });
      
        // Region Chart
        const regionCtx = document.getElementById('regionChart').getContext('2d');
        new Chart(regionCtx, {
          type: 'bar',
          data: <%= raw @region_chart_data.to_json %>,
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: { display: false }
            },
            scales: {
              x: { beginAtZero: true },
              y: { beginAtZero: true }
            }
          }
        });
      </script>
    <% end %>
  </div>
</div>
