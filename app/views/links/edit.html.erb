<div class="max-w-2xl mx-auto">
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Editar Link
      </h2>
      <p class="mt-1 text-sm text-gray-500">
        Atualize as informações do seu link de afiliação
      </p>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with model: @link, local: true, class: "space-y-6" do |form| %>
        <% if @link.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  Ocorreram alguns erros:
                </h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @link.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Link info readonly -->
        <div class="bg-gray-50 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-700 mb-3">Informações do Link</h3>
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
              <label class="block text-xs font-medium text-gray-500">Código do Link</label>
              <p class="mt-1 text-sm text-gray-900 font-mono"><%= @link.short_code %></p>
            </div>
            <div>
              <label class="block text-xs font-medium text-gray-500">URL Curta</label>
              <p class="mt-1 text-sm text-blue-600 break-all"><%= @short_url %></p>
            </div>
          </div>
        </div>

        <div>
          <%= form.label :original_url, "URL de Destino", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.url_field :original_url, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">O link completo de afiliação da Shopee</p>
        </div>

        <div>
          <%= form.label :title, "Título do Link (opcional)", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :title, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Um nome para identificar facilmente este link</p>
        </div>

        <div>
          <%= form.label :description, "Descrição (opcional)", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_area :description, rows: 3, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="flex items-center">
          <%= form.check_box :active, class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded" %>
          <%= form.label :active, "Link ativo", class: "ml-2 block text-sm text-gray-900" %>
          <p class="ml-2 text-sm text-gray-500">(Links inativos não funcionarão)</p>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancelar", @link, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "Atualizar Link", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Statistics -->
  <div class="mt-6 bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Estatísticas</h3>
      
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
        <div class="text-center">
          <p class="text-2xl font-bold text-gray-900"><%= @link.clicks_count %></p>
          <p class="text-sm text-gray-500">Total de Cliques</p>
        </div>
        <div class="text-center">
          <p class="text-2xl font-bold text-gray-900"><%= @link.created_at.strftime("%d/%m/%Y") %></p>
          <p class="text-sm text-gray-500">Data de Criação</p>
        </div>
        <div class="text-center">
          <p class="text-2xl font-bold text-gray-900">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @link.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @link.active? ? 'Ativo' : 'Inativo' %>
            </span>
          </p>
          <p class="text-sm text-gray-500">Status</p>
        </div>
      </div>
    </div>
  </div>
</div>
