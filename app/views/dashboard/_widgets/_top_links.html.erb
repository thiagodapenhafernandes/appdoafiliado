<!-- Links Mais Acessados -->
<div class="bg-white shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg leading-6 font-medium text-gray-900">üî• Links Mais Acessados</h3>
      <div class="flex items-center space-x-2">
        <span class="text-sm text-gray-500">Cliques √∫nicos</span>
        <button class="text-gray-400 hover:text-gray-600">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
          </svg>
        </button>
        <button class="text-gray-400 hover:text-gray-600">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <% if @links.any? %>
      <!-- Table Header -->
      <div class="overflow-hidden">
        <table class="min-w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome do Link</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">URL Curta</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliques</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">A√ß√µes</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @links_by_clicks.each_with_index do |link, index| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-sm">
                      #<%= index + 1 %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= link.title.present? ? truncate(link.title, length: 30) : "Link sem t√≠tulo" %>
                      </div>
                      <div class="text-sm text-gray-500">
                        <%= truncate(link.original_url, length: 40) %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-blue-600 font-mono">
                    <%= link.short_url(@request) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="text-sm font-medium text-gray-900">
                      <%= number_with_delimiter(link.clicks_count) %>
                    </div>
                    <div class="ml-2">
                      <% if link.clicks_count > 100 %>
                        üî•
                      <% elsif link.clicks_count > 50 %>
                        üìà
                      <% elsif link.clicks_count > 10 %>
                        üëç
                      <% end %>
                    </div>
                  </div>
                  <!-- Barra de progresso -->
                  <div class="w-20 bg-gray-200 rounded-full h-1 mt-1">
                    <% max_clicks = @links_by_clicks.first&.clicks_count || 1 %>
                    <div class="bg-blue-500 h-1 rounded-full" style="width: <%= (link.clicks_count.to_f / max_clicks * 100).round(1) %>%"></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= link.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= link.active? ? '‚úÖ Ativo' : '‚ùå Inativo' %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex space-x-2">
                    <%= link_to "üëÅÔ∏è", link, class: "text-blue-600 hover:text-blue-900", title: "Visualizar" %>
                    <%= link_to "‚úèÔ∏è", edit_link_path(link), class: "text-green-600 hover:text-green-900", title: "Editar" %>
                    <%= link_to "üìä", clicks_analytics_path(link_id: link.id), class: "text-purple-600 hover:text-purple-900", title: "Analytics" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Link para ver todos -->
      <div class="mt-4 text-center">
        <%= link_to links_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          Ver todos os links
          <svg class="ml-2 -mr-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        <% end %>
      </div>
    <% else %>
      <!-- Estado vazio -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhum link criado</h3>
        <p class="mt-1 text-sm text-gray-500">Comece criando seu primeiro link de afilia√ß√£o.</p>
        <div class="mt-6">
          <%= link_to new_link_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Criar primeiro link
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
