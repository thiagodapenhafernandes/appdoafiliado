<div class="space-y-6">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        🏠 Dashboard
      </h2>
      <% if current_user.current_plan %>
        <p class="mt-1 text-sm text-gray-500">
          Plano atual: <span class="font-medium text-blue-600"><%= current_user.current_plan.name %></span>
          <% if current_user.on_trial? %>
            - <span class="text-orange-600">Trial (<%= current_user.trial_days_remaining %> dias restantes)</span>
          <% end %>
        </p>
      <% end %>
    </div>
    <div class="mt-4 flex items-center space-x-3 md:mt-0 md:ml-4">
      <!-- Period Selector -->
      <div class="relative">
        <select class="appearance-none bg-white border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
          <option value="7_days">7 dias</option>
          <option value="30_days">30 dias</option>
          <option value="90_days">90 dias</option>
        </select>
        <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </div>
      </div>
      
      <%= link_to new_link_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        Criar Novo Link
      <% end %>
    </div>
  </div>

  <!-- Informações do Plano -->
  <% if current_user.current_plan %>
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <h4 class="text-sm font-medium text-blue-900">💎 Uso do Plano <%= current_user.current_plan.name %></h4>
          <div class="mt-2 flex items-center space-x-4 text-sm text-blue-700">
            <span>🔗 Links: <%= current_user.links.count %>/<%= current_user.current_plan.max_links == -1 ? '∞' : current_user.current_plan.max_links %></span>
            <span>•</span>
            <span>📊 Analytics: <%= current_user.can_access_advanced_analytics? ? 'Avançados' : 'Básicos' %></span>
            <span>•</span>
            <span>🎯 Rastreamento: <%= current_user.can_access_advanced_tracking? ? 'Avançado' : 'Básico' %></span>
          </div>
        </div>
        <% unless current_user.can_access_advanced_analytics? %>
          <%= link_to "🚀 Upgrade", plans_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-blue-700" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Cards de Estatísticas -->
  <%= render 'dashboard/widgets/stats_cards' %>

  <!-- Gráfico de Desempenho dos Links -->
  <%= render 'dashboard/widgets/performance_chart' %>

  <!-- Two Column Layout for Premium Features -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Cliques por Origem -->
    <%= render 'dashboard/widgets/clicks_by_source' %>

    <!-- Análises de Horário -->
    <%= render 'dashboard/widgets/hourly_analytics' %>
  </div>

  <!-- Links Mais Acessados -->
  <%= render 'dashboard/widgets/top_links' %>
</div>

<!-- Chart.js Script -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  const ctx = document.getElementById('performanceChart').getContext('2d');
  
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: <%= raw @chart_labels.to_json %>,
      datasets: [{
        label: 'Cliques',
        data: <%= raw @chart_data.to_json %>,
        borderColor: '#f97316',
        backgroundColor: 'rgba(249, 115, 22, 0.1)',
        tension: 0.4,
        fill: true
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            stepSize: 1
          }
        },
        x: {
          grid: {
            display: false
          }
        }
      }
    }
  });
});
</script>

