<% content_for :title, "Criar Conta - App do Afiliado" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <div class="mx-auto h-12 w-12 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
        <i class="fas fa-chart-line text-white text-xl"></i>
      </div>
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        Crie sua conta
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        <span id="trial-text">Comece com 14 dias grátis</span>
        <span id="payment-text" class="hidden">, configure seu pagamento</span>
      </p>
    </div>

    <!-- Registration Form -->
    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), 
        local: true, class: "mt-8 space-y-6", id: "registration-form") do |form| %>
      
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <!-- Hidden field for plan -->
      <%= hidden_field_tag :plan_id, @selected_plan&.id || (@plans&.second&.id) %>
      
      <div class="space-y-4">
        <!-- First Name -->
        <div>
          <%= form.label :first_name, "Nome", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :first_name, 
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm",
              placeholder: "Seu nome",
              required: true %>
        </div>

        <!-- Last Name -->
        <div>
          <%= form.label :last_name, "Sobrenome", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :last_name, 
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm",
              placeholder: "Seu sobrenome",
              required: true %>
        </div>

        <!-- Email -->
        <div>
          <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
          <%= form.email_field :email, 
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm",
              placeholder: "seu@email.com",
              required: true %>
        </div>

        <!-- Password -->
        <div>
          <%= form.label :password, "Senha", class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password, 
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm",
              placeholder: "Mínimo 6 caracteres",
              autocomplete: "new-password",
              required: true %>
        </div>

        <!-- Password Confirmation -->
        <div>
          <%= form.label :password_confirmation, "Confirmar Senha", class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password_confirmation, 
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm",
              placeholder: "Confirme sua senha",
              autocomplete: "new-password",
              required: true %>
        </div>
      </div>

      <!-- Plan Selection -->
      <div class="mt-6">
        <label class="block text-sm font-medium text-gray-700 mb-3">
          Escolha seu plano inicial
        </label>
        
        <div class="space-y-3">
          <% @plans ||= Plan.active.order(:price_cents) %>
          <% @plans.each_with_index do |plan, index| %>
            <div class="relative">
              <%= radio_button_tag :plan_id, plan.id, 
                  (@selected_plan&.id == plan.id) || (index == 1 && @selected_plan.nil?),
                  class: "sr-only peer", 
                  id: "plan_#{plan.id}" %>
              
              <label for="plan_<%= plan.id %>" 
                     class="flex items-center justify-between w-full p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-blue-300 peer-checked:border-blue-500 peer-checked:bg-blue-50 transition-all duration-200">
                
                <div class="flex items-center space-x-3">
                  <div class="flex-shrink-0">
                    <div class="w-4 h-4 border-2 border-gray-300 rounded-full peer-checked:border-blue-500 peer-checked:bg-blue-500 relative">
                      <div class="w-2 h-2 bg-white rounded-full absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-0 peer-checked:opacity-100"></div>
                    </div>
                  </div>
                  
                  <div>
                    <h3 class="text-sm font-semibold text-gray-900">
                      <%= plan.name %>
                      <% if index == 1 %>
                        <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                          Mais Popular
                        </span>
                      <% end %>
                    </h3>
                    <p class="text-xs text-gray-600"><%= plan.description %></p>
                  </div>
                </div>
                
                <div class="text-right">
                  <% if plan.price_cents == 0 %>
                    <span class="text-lg font-bold text-gray-900">Gratuito</span>
                  <% else %>
                    <span class="text-lg font-bold text-gray-900">R$ <%= plan.price.to_i %></span>
                    <span class="text-sm text-gray-600">/mês</span>
                  <% end %>
                </div>
              </label>
            </div>
          <% end %>
        </div>
        
        <p class="mt-2 text-xs text-gray-500 text-center">
          <i class="fas fa-gift mr-1"></i>
          Todos os planos incluem 14 dias grátis para testar
        </p>
      </div>

      <!-- Terms and Conditions -->
      <div class="flex items-center">
        <input id="terms" 
               name="terms" 
               type="checkbox" 
               required
               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
        <label for="terms" class="ml-2 block text-sm text-gray-900">
          Aceito os 
          <a href="#" class="text-blue-600 hover:text-blue-500">Termos de Uso</a> 
          e 
          <a href="#" class="text-blue-600 hover:text-blue-500">Política de Privacidade</a>
        </label>
      </div>

      <!-- Payment Information (shown for paid plans) -->
      <div id="payment-section" class="hidden space-y-4">
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">
            <i class="fas fa-credit-card mr-2"></i>
            Informações de Pagamento
          </h3>
          
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
            <div class="flex items-center">
              <i class="fas fa-info-circle text-blue-500 mr-2"></i>
              <p class="text-sm text-blue-700">
                <strong>14 dias grátis garantidos!</strong> Seu cartão será cobrado apenas após o período de teste.
              </p>
            </div>
          </div>

          <!-- Card Element -->
          <div class="space-y-3">
            <label class="block text-sm font-medium text-gray-700">
              Dados do Cartão
            </label>
            <div id="card-element" class="p-3 border border-gray-300 rounded-md bg-white">
              <!-- Stripe Elements will create form elements here -->
            </div>
            
            <!-- Card errors will be displayed here -->
            <div id="card-errors" class="text-red-600 text-sm" role="alert"></div>
          </div>

          <!-- Billing Info -->
          <div class="grid grid-cols-2 gap-4 mt-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                CEP
              </label>
              <input type="text" 
                     id="billing_postal_code" 
                     name="billing_postal_code"
                     class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
                     placeholder="00000-000">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                País
              </label>
              <select id="billing_country" 
                      name="billing_country"
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                <option value="BR" selected>Brasil</option>
              </select>
            </div>
          </div>

          <!-- Security badges -->
          <div class="flex items-center justify-center space-x-4 mt-4 text-xs text-gray-500">
            <div class="flex items-center">
              <i class="fas fa-lock mr-1"></i>
              SSL Seguro
            </div>
            <div class="flex items-center">
              <i class="fab fa-cc-stripe mr-1"></i>
              Powered by Stripe
            </div>
            <div class="flex items-center">
              <i class="fas fa-shield-alt mr-1"></i>
              PCI Compliant
            </div>
          </div>
        </div>
      </div>

      <!-- Hidden field for payment method -->
      <input type="hidden" id="payment_method_id" name="payment_method_id">
      <input type="hidden" id="stripe_unavailable" name="stripe_unavailable" value="false">

      <!-- Submit Button -->
      <div>
        <%= form.submit "Criar Conta Gratuita", 
            class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-105",
            id: "submit-btn" %>
      </div>

      <!-- Loading State -->
      <div id="loading-state" class="hidden text-center">
        <div class="inline-flex items-center px-4 py-2 font-semibold leading-6 text-sm shadow rounded-md text-blue-500 bg-white transition ease-in-out duration-150">
          <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          Criando sua conta...
        </div>
      </div>
    <% end %>

    <!-- Sign In Link -->
    <div class="text-center">
      <p class="text-sm text-gray-600">
        Já tem uma conta?
        <%= link_to "Entrar", new_session_path(resource_name), 
            class: "font-medium text-blue-600 hover:text-blue-500 ml-1" %>
      </p>
    </div>
  </div>
</div>

<!-- Stripe Integration Script -->
<script src="https://js.stripe.com/v3/"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('registration-form');
  const submitBtn = document.getElementById('submit-btn');
  const loadingState = document.getElementById('loading-state');
  
  if (form) {
    form.addEventListener('submit', function(e) {
      // Show loading state
      submitBtn.style.display = 'none';
      loadingState.classList.remove('hidden');
      
      // Basic validation
      const requiredFields = form.querySelectorAll('[required]');
      let isValid = true;
      
      requiredFields.forEach(field => {
        if (!field.value.trim()) {
          isValid = false;
          field.classList.add('border-red-500');
        } else {
          field.classList.remove('border-red-500');
        }
      });
      
      // Password confirmation check
      const password = form.querySelector('#user_password');
      const passwordConfirmation = form.querySelector('#user_password_confirmation');
      
      if (password && passwordConfirmation && password.value !== passwordConfirmation.value) {
        isValid = false;
        passwordConfirmation.classList.add('border-red-500');
        alert('As senhas não coincidem');
      }
      
      if (!isValid) {
        e.preventDefault();
        submitBtn.style.display = 'block';
        loadingState.classList.add('hidden');
        return false;
      }
      
      // Form is valid, let it submit normally
      // The trial period and plan selection will be handled by the controller
    });
  }
  
  // Plan selection styling
  const planInputs = document.querySelectorAll('input[name="plan_id"]');
  planInputs.forEach(input => {
    input.addEventListener('change', function() {
      // Update visual feedback
      planInputs.forEach(radio => {
        const label = radio.closest('label');
        if (radio.checked) {
          label.classList.add('border-blue-500', 'bg-blue-50');
          label.classList.remove('border-gray-200');
        } else {
          label.classList.remove('border-blue-500', 'bg-blue-50');
          label.classList.add('border-gray-200');
        }
      });
    });
  });
  
  // Password strength indicator
  const passwordField = document.getElementById('user_password');
  if (passwordField) {
    passwordField.addEventListener('input', function() {
      const password = this.value;
      const strengthIndicator = document.getElementById('password-strength');
      
      if (password.length >= 8) {
        this.classList.remove('border-red-500');
        this.classList.add('border-green-500');
      } else if (password.length >= 6) {
        this.classList.remove('border-red-500', 'border-green-500');
        this.classList.add('border-yellow-500');
      } else if (password.length > 0) {
        this.classList.remove('border-green-500', 'border-yellow-500');
        this.classList.add('border-red-500');
      }
    });
  }
});
</script>

<!-- Custom Styles -->
<style>
  /* Custom radio button styling */
  input[type="radio"]:checked + label .w-4 {
    border-color: #3B82F6;
    background-color: #3B82F6;
  }
  
  input[type="radio"]:checked + label .w-2 {
    opacity: 1;
  }
  
  /* Form field focus styles */
  .form-field:focus {
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }
  
  /* Loading animation */
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
