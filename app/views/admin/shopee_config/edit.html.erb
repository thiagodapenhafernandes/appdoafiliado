<!-- app/views/admin/shopee_config/edit.html.erb -->
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-4">
        <li>
          <%= link_to "Shopee Config", admin_shopee_configs_path, class: "text-gray-400 hover:text-gray-500" %>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            <%= link_to @config.market, admin_shopee_config_path(@config), class: "ml-4 text-gray-400 hover:text-gray-500" %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="ml-4 text-sm font-medium text-gray-500">Editar</span>
          </div>
        </li>
      </ol>
    </nav>
    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
          Editar Configuração - <%= @config.market %>
        </h2>
        <p class="mt-1 text-sm text-gray-500">
          Atualize as credenciais master para integração com a API Shopee
        </p>
      </div>
      <div class="mt-4 flex md:mt-0 md:ml-4">
        <%= link_to "Ver Detalhes", admin_shopee_config_path(@config), 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    </div>
  </div>

  <!-- Status Alert -->
  <% if @config.configured? && @config.active? %>
    <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-green-700">
            Esta configuração está <strong>ativa e funcionando</strong>. Cuidado ao fazer alterações em produção.
          </p>
        </div>
      </div>
    </div>
  <% elsif !@config.configured? %>
    <div class="mb-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.864-.833-2.598 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-yellow-700">
            Esta configuração está <strong>incompleta</strong>. Configure as credenciais master para ativá-la.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Form -->
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with model: [:admin, @config], local: true, html: { class: "space-y-6" } do |form| %>
        <% if @config.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@config.errors.count, "erro foi", "erros foram") %> encontrado<%= 's' if @config.errors.count > 1 %>:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% @config.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Market (Read-only for edit) -->
        <div>
          <%= form.label :market, "Mercado", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <div class="block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md text-sm text-gray-500">
              <%= @config.market %> (não pode ser alterado)
            </div>
            <%= form.hidden_field :market %>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            O mercado não pode ser alterado após a criação
          </p>
        </div>

        <!-- Endpoint -->
        <div>
          <%= form.label :endpoint, "Endpoint da API", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :endpoint, 
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            URL do endpoint GraphQL da API Shopee para <%= @config.market %>
          </p>
        </div>

        <!-- Master App ID -->
        <div>
          <%= form.label :master_app_id, "App ID Master", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :master_app_id, 
                placeholder: @config.master_app_id.present? ? "#{@config.master_app_id[0..6]}*** (atual)" : "Seu App ID master da Shopee",
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            <% if @config.master_app_id.present? %>
              ✓ App ID configurado. Deixe em branco para manter o atual ou digite um novo.
            <% else %>
              Digite o App ID da sua aplicação master registrada na Shopee
            <% end %>
          </p>
        </div>

        <!-- Master App Secret -->
        <div>
          <%= form.label :master_app_secret, "App Secret Master", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :master_app_secret, 
                placeholder: @config.master_app_secret.present? ? "*************** (atual)" : "Seu App Secret master da Shopee",
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            <% if @config.master_app_secret.present? %>
              ✓ App Secret configurado. Deixe em branco para manter o atual ou digite um novo.
            <% else %>
              Digite o App Secret da sua aplicação master (será criptografado automaticamente)
            <% end %>
          </p>
        </div>

        <!-- Active Toggle -->
        <div class="flex items-center">
          <%= form.check_box :active, 
              class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
          <%= form.label :active, "Configuração ativa", class: "ml-2 block text-sm text-gray-900" %>
          <p class="ml-2 text-sm text-gray-500">
            <% if @config.active? %>
              (atualmente ativa)
            <% else %>
              (atualmente inativa)
            <% end %>
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-between">
          <div>
            <% if @config.configured? %>
              <%= button_to "Testar Conexão", test_connection_admin_shopee_config_path(@config), 
                  method: :post,
                  class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
            <% end %>
          </div>
          
          <div class="flex space-x-3">
            <%= link_to "Cancelar", admin_shopee_config_path(@config), 
                class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= form.submit "Salvar Alterações", 
                class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="mt-8 bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Zona de Perigo</h3>
      <div class="mt-2 max-w-xl text-sm text-gray-500">
        <p>Ações irreversíveis que afetarão todos os usuários usando esta configuração.</p>
      </div>
      <div class="mt-5 flex items-center space-x-4">
        <%= button_to "Limpar Credenciais", 
            admin_shopee_config_path(@config),
            method: :patch,
            params: { shopee_master_config: { master_app_id: '', master_app_secret: '' } },
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
            data: { confirm: "Tem certeza? Isso removerá todas as credenciais configuradas e desativará a integração para todos os usuários." } %>
        
        <%= button_to "Excluir Configuração", 
            admin_shopee_config_path(@config),
            method: :delete,
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
            data: { confirm: "ATENÇÃO: Esta ação é irreversível! Tem certeza que deseja excluir esta configuração? Todos os usuários que dependem dela perderão acesso à integração Shopee." } %>
      </div>
    </div>
  </div>
</div>
