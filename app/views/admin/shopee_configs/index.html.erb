<div class="bg-white overflow-hidden shadow rounded-lg divide-y divide-gray-200">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      Configurações Shopee Master
    </h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      Gerencie as credenciais do aplicativo master para integração centralizada
    </p>
  </div>

  <!-- Status Cards -->
  <div class="px-4 py-5 sm:p-6">
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Status do Brasil -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% if @brazil_config&.active? %>
                <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
              <% else %>
                <div class="w-8 h-8 bg-red-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </div>
              <% end %>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Brasil</dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @brazil_config&.active? ? "Ativo" : "Inativo" %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Usuários Ativos -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Usuários Centralizados</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @active_users_count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Requests Hoje -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Requests Hoje</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @daily_requests %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Taxa de Sucesso -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Taxa de Sucesso</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @success_rate %>%</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Rate Limiting Status -->
  <div class="px-4 py-5 sm:p-6">
    <h4 class="text-lg font-medium text-gray-900 mb-4">Status de Rate Limiting</h4>
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="text-sm font-medium text-gray-500">Último Minuto</div>
        <div class="text-2xl font-bold text-gray-900"><%= @requests_last_minute %></div>
        <div class="text-xs text-gray-500">Limite: 1000/min</div>
      </div>
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="text-sm font-medium text-gray-500">Última Hora</div>
        <div class="text-2xl font-bold text-gray-900"><%= @requests_last_hour %></div>
        <div class="text-xs text-gray-500">Limite: 10000/hora</div>
      </div>
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="text-sm font-medium text-gray-500">Hoje</div>
        <div class="text-2xl font-bold text-gray-900"><%= @daily_requests %></div>
        <div class="text-xs text-gray-500">Limite: 100000/dia</div>
      </div>
    </div>
  </div>

  <!-- Configuração do Brasil -->
  <div class="px-4 py-5 sm:p-6">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <h4 class="text-lg font-medium text-gray-900">Configuração Brasil</h4>
        <p class="mt-1 text-sm text-gray-500">
          Configure as credenciais do aplicativo master para o mercado brasileiro
        </p>
      </div>
      <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
        <% if @brazil_config %>
          <%= link_to "Editar", edit_admin_shopee_config_path(@brazil_config), 
                      class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" %>
        <% else %>
          <%= link_to "Configurar", new_admin_shopee_config_path, 
                      class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" %>
        <% end %>
      </div>
    </div>

    <% if @brazil_config %>
      <div class="mt-6 border-t border-gray-200 pt-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">App ID</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @brazil_config.master_app_id&.first(8) %>...
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @brazil_config.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= @brazil_config.active? ? "Ativo" : "Inativo" %>
              </span>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Último Teste</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @brazil_config.updated_at&.strftime("%d/%m/%Y às %H:%M") || "Nunca testado" %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Ações</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <div class="flex space-x-2">
                <%= link_to "Testar Conexão", test_admin_shopee_config_path(@brazil_config), 
                            method: :post,
                            class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                <span class="text-gray-300">|</span>
                <%= link_to (@brazil_config.active? ? "Desativar" : "Ativar"), 
                            toggle_admin_shopee_config_path(@brazil_config), 
                            method: :patch,
                            class: "text-indigo-600 hover:text-indigo-900 text-sm",
                            data: { confirm: "Tem certeza?" } %>
              </div>
            </dd>
          </div>
        </dl>
      </div>
    <% else %>
      <div class="mt-6 border-t border-gray-200 pt-6">
        <div class="text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhuma configuração</h3>
          <p class="mt-1 text-sm text-gray-500">Configure as credenciais do aplicativo master para começar.</p>
          <div class="mt-6">
            <%= link_to "Configurar Agora", new_admin_shopee_config_path, 
                        class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Debug Info (apenas em desenvolvimento) -->
  <% if Rails.env.development? %>
    <div class="px-4 py-5 sm:p-6 bg-gray-50">
      <h4 class="text-lg font-medium text-gray-900 mb-4">Debug Info</h4>
      <div class="space-y-2 text-sm text-gray-600">
        <div><strong>Environment:</strong> <%= Rails.env %></div>
        <div><strong>Database:</strong> <%= @brazil_config ? "Configuração encontrada" : "Nenhuma configuração" %></div>
        <div><strong>Requests 24h:</strong> <%= @daily_requests %></div>
        <div><strong>Active Users:</strong> <%= @active_users_count %></div>
      </div>
    </div>
  <% end %>
</div>
